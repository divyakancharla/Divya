@model User;
@{
    ViewData["Title"] = "create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>create</h1>
@using (Html.BeginForm())
{ 
<table class="table">
    <tr>
        <td>Name</td>
        <td>@Html.TextBoxFor(m => m.Name)</td>
        <td>@Html.ValidationMessageFor(m=>m.Name)</td>
    </tr>
    <tr>
        <td>DOB</td>
        <td>@Html.TextBoxFor(m => m.DOB, null, new { @type = "Date" })</td>
        <td>@Html.ValidationMessageFor(m => m.DOB)</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>@Html.TextBoxFor(m => m.Email)</td>
        <td>@Html.ValidationMessageFor(m => m.Email)</td>
    </tr>
    <tr>
        <td>Mobile</td>
        <td>@Html.TextBoxFor(m => m.Mobileno)</td>
        <td>@Html.ValidationMessageFor(m => m.Mobileno)</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>@Html.DropDownListFor(m => m.Country,new SelectList( new string[] {" ","India", "China", "US" } ))</td>
        <td>@Html.ValidationMessageFor(m => m.Country)</td>
    </tr>
    <tr>
        <td>Username</td>
        <td>@Html.TextBox("uname")</td>
        <td>@Html.ValidationMessageFor(m => m.Uname)</td>
    </tr>
    <tr>
        <td>Password</td>
        <td>@Html.Password("pwd")</td>
        <td>@Html.ValidationMessageFor(m => m.Pwd)</td>
    </tr>
    <tr>
        <td colspan="2">
            <input type="submit" value="Register"  />
    </tr>
</table>
}